                @*Note that the "value" field indicates the controller method to perform.*@
                <input type="submit" value="Edit" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" type="button" class="btn btn-outline-danger">Discard Changes</a>
</div>

